<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Avalonia.Controls.Knob.Demo.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls.Knob"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Avalonia.Controls.Knob.Demo.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Avalonia.Controls.Knob.Demo"
        SizeToContent="WidthAndHeight"
        Padding="10">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Grid ColumnDefinitions="*, *">
        <controls:Knob Grid.Column="0"
                       Value="{Binding Value}"
                       Maximum="{Binding Maximum}"
                       Minimum="{Binding Minimum}"
                       SmallChange="{Binding SmallChange}"
                       LargeChange="{Binding LargeChange}"
                       StartAngle="{Binding StartAngle}"
                       SweepAngle="{Binding SweepAngle}" />

        <Grid Grid.Column="1"
              VerticalAlignment="Center"
              ColumnDefinitions="Auto, *"
              RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto"
              ColumnSpacing="8"
              RowSpacing="4">
            <TextBlock Grid.Column="0"
                       Grid.Row="0"
                       Text="Value"
                       VerticalAlignment="Center" />
            <NumericUpDown Grid.Column="1"
                           Grid.Row="0"
                           Value="{Binding Value}" />

            <TextBlock Grid.Column="0"
                       Grid.Row="1"
                       Text="Maximum"
                       VerticalAlignment="Center" />
            <NumericUpDown Grid.Column="1"
                           Grid.Row="1"
                           Value="{Binding Maximum}" />

            <TextBlock Grid.Column="0"
                       Grid.Row="2"
                       Text="Minimum"
                       VerticalAlignment="Center" />
            <NumericUpDown Grid.Column="1"
                           Grid.Row="2"
                           Value="{Binding Minimum}" />

            <TextBlock Grid.Column="0"
                       Grid.Row="3"
                       Text="Small Change"
                       VerticalAlignment="Center" />
            <NumericUpDown Grid.Column="1"
                           Grid.Row="3"
                           Value="{Binding SmallChange}" />

            <TextBlock Grid.Column="0"
                       Grid.Row="4"
                       Text="Large Change"
                       VerticalAlignment="Center" />
            <NumericUpDown Grid.Column="1"
                           Grid.Row="4"
                           Value="{Binding LargeChange}" />

            <TextBlock Grid.Column="0"
                       Grid.Row="5"
                       Text="Start Angle"
                       VerticalAlignment="Center" />
            <NumericUpDown Grid.Column="1"
                           Grid.Row="5"
                           Value="{Binding StartAngle}" />

            <TextBlock Grid.Column="0"
                       Grid.Row="6"
                       Text="Sweep Angle"
                       VerticalAlignment="Center" />
            <NumericUpDown Grid.Column="1"
                           Grid.Row="6"
                           Value="{Binding SweepAngle}" />
        </Grid>
    </Grid>
</Window>