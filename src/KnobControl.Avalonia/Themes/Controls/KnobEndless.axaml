<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:KnobControl.Avalonia"
                    xmlns:converters="clr-namespace:KnobControl.Avalonia.Converters"
                    x:CompileBindings="True">
    <Design.PreviewWith>
        <Panel Width="400"
               Height="400"
               Background="White">
            <controls:KnobEndless Width="120"
                                  Height="120"
                                  Value="21"
                                  Minimum="0"
                                  Maximum="200"
                                  SmallChange="1"
                                  GripsDash="3" />
        </Panel>
    </Design.PreviewWith>

    <ControlTheme x:Key="{x:Type controls:KnobEndless}"
                  TargetType="controls:KnobEndless">
        <Setter Property="MinWidth" Value="120" />
        <Setter Property="MinHeight" Value="120" />
        <Setter Property="Background" Value="{DynamicResource SliderTrackFill}" />
        <Setter Property="Foreground" Value="{DynamicResource TextControlForeground}" />
        <Setter Property="Stroke" Value="{DynamicResource SliderTrackValueFill}" />

        <Setter Property="Template">
            <ControlTemplate>
                <DataValidationErrors>
                    <Panel x:Name="PART_KnobEndlessContainer"
                           Background="{DynamicResource SliderContainerBackground}">
                        <controls:KnobEndlessArrow Fill="{TemplateBinding Stroke}"
                                                   StartAngle="{TemplateBinding StartAngle}"
                                                   SweepAngle="{TemplateBinding SweepAngle}"
                                                   DecoratorThickness="{TemplateBinding ArcThickness}"
                                                   ArrowSize="{TemplateBinding ArrowSize}" />

                        <Ellipse x:Name="PART_Ellipse"
                                 Margin="{TemplateBinding ArcThickness, Converter={x:Static converters:KnobEndlessEllipseMarginConverter.Instance}}"
                                 Fill="{TemplateBinding Background}"
                                 Stroke="{TemplateBinding Stroke}"
                                 StrokeThickness="{TemplateBinding GripsThickness}"
                                 StrokeDashArray="{TemplateBinding GripsDash, Converter={x:Static converters:KnobEndlessStrokeDashArrayConverter.Instance}}"
                                 StrokeLineCap="Round">
                            <Ellipse.RenderTransform>
                                <RotateTransform
                                    Angle="{Binding RotateAngle, RelativeSource={RelativeSource AncestorType=controls:KnobEndless}}" />
                            </Ellipse.RenderTransform>
                        </Ellipse>

                        <ContentPresenter x:Name="PART_HeaderValueContentPresenter"
                                          Content="{TemplateBinding Value}"
                                          ContentTemplate="{TemplateBinding HeaderValueTemplate}"
                                          IsVisible="{TemplateBinding IsHeaderValueVisible}"
                                          HorizontalContentAlignment="{TemplateBinding HeaderValueHorizontalContentAlignment}"
                                          VerticalContentAlignment="{TemplateBinding HeaderValueVerticalContentAlignment}" />
                    </Panel>
                </DataValidationErrors>
            </ControlTemplate>
        </Setter>

        <!-- Left -->
        <Style Selector="^[HeaderValuePlacement=Left]">
            <Style Selector="^ /template/ ContentPresenter#PART_HeaderValueContentPresenter">
                <Setter Property="HorizontalAlignment" Value="Left" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="RenderTransform">
                    <RotateTransform Angle="90" />
                </Setter>
            </Style>
        </Style>

        <!-- Top -->
        <Style Selector="^[HeaderValuePlacement=Top]">
            <Style Selector="^ /template/ ContentPresenter#PART_HeaderValueContentPresenter">
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="VerticalAlignment" Value="Top" />
            </Style>
        </Style>

        <!-- Rigth -->
        <Style Selector="^[HeaderValuePlacement=Right]">
            <Style Selector="^ /template/ ContentPresenter#PART_HeaderValueContentPresenter">
                <Setter Property="HorizontalAlignment" Value="Right" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="RenderTransform">
                    <RotateTransform Angle="-90" />
                </Setter>
            </Style>
        </Style>

        <!-- Bottom -->
        <Style Selector="^[HeaderValuePlacement=Bottom]">
            <Style Selector="^ /template/ ContentPresenter#PART_HeaderValueContentPresenter">
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="VerticalAlignment" Value="Bottom" />
            </Style>
        </Style>

        <!-- Center -->
        <Style Selector="^[HeaderValuePlacement=Center]">
            <Style Selector="^ /template/ ContentPresenter#PART_HeaderValueContentPresenter">
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>
        </Style>

        <!--  PointerOver State  -->
        <Style Selector="^:pointerover">
            <Style Selector="^ /template/ Panel#PART_KnobEndlessContainer">
                <Setter Property="Background"
                        Value="{DynamicResource SliderContainerBackgroundPointerOver}" />
            </Style>
            <Style Selector="^ /template/ Ellipse#PART_Ellipse">
                <Setter Property="Fill"
                        Value="{DynamicResource SliderThumbBackgroundPointerOver}" />
                <Setter Property="Stroke"
                        Value="{DynamicResource SliderTrackValueFillPointerOver}" />
            </Style>
        </Style>

        <!--  Pressed State  -->
        <Style Selector="^:pressed">
            <Style Selector="^ /template/ Panel#PART_KnobEndlessContainer">
                <Setter Property="Background"
                        Value="{DynamicResource SliderContainerBackgroundPressed}" />
            </Style>
            <Style Selector="^ /template/ Ellipse#PART_Ellipse">
                <Setter Property="Fill"
                        Value="{DynamicResource SliderThumbBackgroundPressed}" />
                <Setter Property="Stroke"
                        Value="{DynamicResource SliderTrackValueFillPressed}" />
            </Style>
        </Style>

        <!-- Disabled State -->
        <Style Selector="^:disabled">
            <Style Selector="^ /template/ Ellipse#PART_Ellipse">
                <Setter Property="Fill"
                        Value="{DynamicResource SliderThumbBackgroundDisabled}" />
                <Setter Property="Stroke"
                        Value="{DynamicResource SliderTrackValueFillDisabled}" />
            </Style>
            <Style Selector="^ /template/ ContentPresenter#PART_HeaderValueContentPresenter">
                <Setter Property="Foreground" Value="{DynamicResource TextControlForegroundDisabled}" />
            </Style>
        </Style>

        <!-- Error State -->
        <Style Selector="^:error">
            <Setter Property="Foreground" Value="{DynamicResource SystemControlErrorTextForegroundBrush}" />
            <Style Selector="^ /template/ Ellipse#PART_Ellipse">
                <Setter Property="Fill"
                        Value="{DynamicResource SystemControlErrorTextForegroundBrush}" />
            </Style>
        </Style>
    </ControlTheme>
</ResourceDictionary>