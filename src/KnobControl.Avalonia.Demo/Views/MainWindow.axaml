<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:KnobControl.Avalonia.Demo.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:KnobControl.Avalonia;assembly=KnobControl.Avalonia"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="KnobControl.Avalonia.Demo.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="KnobControl.Avalonia.Demo"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        Padding="10"
        x:CompileBindings="True">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <TabControl>
        <TabItem Header="Knob">
            <Grid ColumnDefinitions="*, *"
                  ColumnSpacing="8">
                <controls:Knob Grid.Column="0"
                               Width="120"
                               Height="120"
                               Value="{Binding Value}"
                               Maximum="{Binding Maximum}"
                               Minimum="{Binding Minimum}"
                               SmallChange="{Binding SmallChange}"
                               LargeChange="{Binding LargeChange}"
                               StartAngle="{Binding StartAngle}"
                               SweepAngle="{Binding SweepAngle}"
                               TickFrequency="{Binding TickFrequency}"
                               PointerThickness="{Binding PointerThickness}"
                               PointerSize="{Binding PointerSize}"
                               ArcThickness="{Binding ArcThickness}"
                               TicksThickness="{Binding TicksThickness}"
                               MinMaxTicksSize="{Binding MinMaxTicksSize}"
                               TicksSize="{Binding TicksSize}"
                               IsPointerVisible="{Binding IsPointerVisible}"
                               IsSnapToTickEnabled="{Binding IsSnapToTickEnabled}"
                               IsHeaderValueVisible="{Binding IsHeaderValueVisible}"
                               HeaderValuePlacement="{Binding SelectedHeaderValuePlacement}" />

                <Grid Grid.Column="1"
                      VerticalAlignment="Center"
                      ColumnDefinitions="Auto, *"
                      RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto"
                      ColumnSpacing="8"
                      RowSpacing="4">
                    <TextBlock Grid.Column="0"
                               Grid.Row="0"
                               Text="Value"
                               VerticalAlignment="Center" />
                    <NumericUpDown Grid.Column="1"
                                   Grid.Row="0"
                                   Value="{Binding Value}" />

                    <TextBlock Grid.Column="0"
                               Grid.Row="1"
                               Text="Maximum"
                               VerticalAlignment="Center" />
                    <NumericUpDown Grid.Column="1"
                                   Grid.Row="1"
                                   Value="{Binding Maximum}" />

                    <TextBlock Grid.Column="0"
                               Grid.Row="2"
                               Text="Minimum"
                               VerticalAlignment="Center" />
                    <NumericUpDown Grid.Column="1"
                                   Grid.Row="2"
                                   Value="{Binding Minimum}" />

                    <TextBlock Grid.Column="0"
                               Grid.Row="3"
                               Text="Small Change"
                               VerticalAlignment="Center" />
                    <NumericUpDown Grid.Column="1"
                                   Grid.Row="3"
                                   Value="{Binding SmallChange}" />

                    <TextBlock Grid.Column="0"
                               Grid.Row="4"
                               Text="Large Change"
                               VerticalAlignment="Center" />
                    <NumericUpDown Grid.Column="1"
                                   Grid.Row="4"
                                   Value="{Binding LargeChange}" />

                    <TextBlock Grid.Column="0"
                               Grid.Row="5"
                               Text="Start Angle"
                               VerticalAlignment="Center" />
                    <NumericUpDown Grid.Column="1"
                                   Grid.Row="5"
                                   Value="{Binding StartAngle}" />

                    <TextBlock Grid.Column="0"
                               Grid.Row="6"
                               Text="Sweep Angle"
                               VerticalAlignment="Center" />
                    <NumericUpDown Grid.Column="1"
                                   Grid.Row="6"
                                   Value="{Binding SweepAngle}" />

                    <TextBlock Grid.Column="0"
                               Grid.Row="7"
                               Text="Tick Frequency"
                               VerticalAlignment="Center" />
                    <NumericUpDown Grid.Column="1"
                                   Grid.Row="7"
                                   Value="{Binding TickFrequency}" />

                    <TextBlock Grid.Column="0"
                               Grid.Row="8"
                               Text="Pointer Thickness"
                               VerticalAlignment="Center" />
                    <NumericUpDown Grid.Column="1"
                                   Grid.Row="8"
                                   Value="{Binding PointerThickness}" />

                    <TextBlock Grid.Column="0"
                               Grid.Row="9"
                               Text="Pointer Size"
                               VerticalAlignment="Center" />
                    <NumericUpDown Grid.Column="1"
                                   Grid.Row="9"
                                   Value="{Binding PointerSize}" />

                    <TextBlock Grid.Column="0"
                               Grid.Row="10"
                               Text="Arc Thickness"
                               VerticalAlignment="Center" />
                    <NumericUpDown Grid.Column="1"
                                   Grid.Row="10"
                                   Value="{Binding ArcThickness}" />

                    <TextBlock Grid.Column="0"
                               Grid.Row="11"
                               Text="Ticks Thickness"
                               VerticalAlignment="Center" />
                    <NumericUpDown Grid.Column="1"
                                   Grid.Row="11"
                                   Value="{Binding TicksThickness}" />


                    <TextBlock Grid.Column="0"
                               Grid.Row="12"
                               Text="Min Max Ticks Size"
                               VerticalAlignment="Center" />
                    <NumericUpDown Grid.Column="1"
                                   Grid.Row="12"
                                   Value="{Binding MinMaxTicksSize}" />

                    <TextBlock Grid.Column="0"
                               Grid.Row="13"
                               Text="Ticks Size"
                               VerticalAlignment="Center" />
                    <NumericUpDown Grid.Column="1"
                                   Grid.Row="13"
                                   Value="{Binding TicksSize}" />

                    <TextBlock Grid.Column="0"
                               Grid.Row="14"
                               Text="Is Pointer Visible"
                               VerticalAlignment="Center" />
                    <CheckBox Grid.Column="1"
                              Grid.Row="14"
                              IsChecked="{Binding IsPointerVisible}" />

                    <TextBlock Grid.Column="0"
                               Grid.Row="15"
                               Text="Is Snap To Tick Enabled"
                               VerticalAlignment="Center" />
                    <CheckBox Grid.Column="1"
                              Grid.Row="15"
                              IsChecked="{Binding IsSnapToTickEnabled}" />

                    <TextBlock Grid.Column="0"
                               Grid.Row="16"
                               Text="Is Header Value Visible"
                               VerticalAlignment="Center" />
                    <CheckBox Grid.Column="1"
                              Grid.Row="16"
                              IsChecked="{Binding IsHeaderValueVisible}" />

                    <TextBlock Grid.Column="0"
                               Grid.Row="17"
                               Text="Header Value Placement"
                               VerticalAlignment="Center" />
                    <ComboBox Grid.Column="1"
                              Grid.Row="17"
                              ItemsSource="{Binding HeaderValuePlacements}"
                              SelectedItem="{Binding SelectedHeaderValuePlacement}" />
                </Grid>
            </Grid>
        </TabItem>

        <TabItem Header="KnobEndless">
            <Grid ColumnDefinitions="*, *"
                  ColumnSpacing="8">
                <controls:KnobEndless Grid.Column="0"
                                    Width="120"
                                    Height="120"
                                    Value="{Binding ValueEndless}"
                                    Maximum="{Binding MaximumEndless}"
                                    Minimum="{Binding MinimumEndless}"
                                    SmallChange="{Binding SmallChangeEndless}"
                                    LargeChange="{Binding LargeChangeEndless}"
                                    StartAngle="{Binding StartAngleEndless}"
                                    SweepAngle="{Binding SweepAngleEndless}"
                                    ArcThickness="{Binding ArcThicknessEndless}"
                                    ArrowSize="{Binding ArrowSizeEndless}"
                                    GripsDash="{Binding GripsDashEndless}"
                                    GripsThickness="{Binding GripsThicknessEndless}"
                                    IsHeaderValueVisible="{Binding IsHeaderValueVisibleEndless}"
                                    HeaderValuePlacement="{Binding SelectedHeaderValuePlacementEndless}" />

                <Grid Grid.Column="1"
                      VerticalAlignment="Center"
                      ColumnDefinitions="Auto, *"
                      RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto"
                      ColumnSpacing="8"
                      RowSpacing="4">
                    <TextBlock Grid.Column="0"
                               Grid.Row="0"
                               Text="Value"
                               VerticalAlignment="Center" />
                    <NumericUpDown Grid.Column="1"
                                   Grid.Row="0"
                                   Value="{Binding ValueEndless}" />

                    <TextBlock Grid.Column="0"
                               Grid.Row="1"
                               Text="Maximum"
                               VerticalAlignment="Center" />
                    <NumericUpDown Grid.Column="1"
                                   Grid.Row="1"
                                   Value="{Binding MaximumEndless}" />

                    <TextBlock Grid.Column="0"
                               Grid.Row="2"
                               Text="Minimum"
                               VerticalAlignment="Center" />
                    <NumericUpDown Grid.Column="1"
                                   Grid.Row="2"
                                   Value="{Binding MinimumEndless}" />

                    <TextBlock Grid.Column="0"
                               Grid.Row="3"
                               Text="Small Change"
                               VerticalAlignment="Center" />
                    <NumericUpDown Grid.Column="1"
                                   Grid.Row="3"
                                   Value="{Binding SmallChangeEndless}" />

                    <TextBlock Grid.Column="0"
                               Grid.Row="4"
                               Text="Large Change"
                               VerticalAlignment="Center" />
                    <NumericUpDown Grid.Column="1"
                                   Grid.Row="4"
                                   Value="{Binding LargeChangeEndless}" />

                    <TextBlock Grid.Column="0"
                               Grid.Row="5"
                               Text="Start Angle"
                               VerticalAlignment="Center" />
                    <NumericUpDown Grid.Column="1"
                                   Grid.Row="5"
                                   Value="{Binding StartAngleEndless}" />

                    <TextBlock Grid.Column="0"
                               Grid.Row="6"
                               Text="Sweep Angle"
                               VerticalAlignment="Center" />
                    <NumericUpDown Grid.Column="1"
                                   Grid.Row="6"
                                   Value="{Binding SweepAngleEndless}" />

                    <TextBlock Grid.Column="0"
                               Grid.Row="7"
                               Text="Arc Thickness"
                               VerticalAlignment="Center" />
                    <NumericUpDown Grid.Column="1"
                                   Grid.Row="7"
                                   Value="{Binding ArcThicknessEndless}" />

                    <TextBlock Grid.Column="0"
                               Grid.Row="8"
                               Text="Arrow Size"
                               VerticalAlignment="Center" />
                    <NumericUpDown Grid.Column="1"
                                   Grid.Row="8"
                                   Value="{Binding ArrowSizeEndless}" />

                    <TextBlock Grid.Column="0"
                               Grid.Row="9"
                               Text="Grips Dash"
                               VerticalAlignment="Center" />
                    <NumericUpDown Grid.Column="1"
                                   Grid.Row="9"
                                   Value="{Binding GripsDashEndless}" />

                    <TextBlock Grid.Column="0"
                               Grid.Row="10"
                               Text="Grips Thickness"
                               VerticalAlignment="Center" />
                    <NumericUpDown Grid.Column="1"
                                   Grid.Row="10"
                                   Value="{Binding GripsThicknessEndless}" />

                    <TextBlock Grid.Column="0"
                               Grid.Row="11"
                               Text="Is Header Value Visible"
                               VerticalAlignment="Center" />
                    <CheckBox Grid.Column="1"
                              Grid.Row="11"
                              IsChecked="{Binding IsHeaderValueVisibleEndless}" />

                    <TextBlock Grid.Column="0"
                               Grid.Row="12"
                               Text="Header Value Placement"
                               VerticalAlignment="Center" />
                    <ComboBox Grid.Column="1"
                              Grid.Row="12"
                              ItemsSource="{Binding HeaderValuePlacements}"
                              SelectedItem="{Binding SelectedHeaderValuePlacementEndless}" />
                </Grid>
            </Grid>
        </TabItem>
    </TabControl>
</Window>